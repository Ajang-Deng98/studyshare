services:
  app:
    image: studyshare-app:latest
    ports:
      - "80:8000"
    environment:
      - DEBUG=False
      - DB_HOST={{ db_host }}
      - DB_NAME={{ db_name }}
      - DB_USER={{ db_user }}
      - DB_PASSWORD={{ db_password }}
      - DB_PORT=5432
      - SECRET_KEY={{ vault_secret_key }}
      - ALLOWED_HOSTS=*
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:8000/ || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s