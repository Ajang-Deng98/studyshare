services:
  backend:
    build:
      context: ./studyshare/backend
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    environment:
      - DEBUG=True
      - DB_HOST={{ db_host }}
      - DB_NAME={{ db_name }}
      - DB_USER={{ db_user }}
      - DB_PASSWORD={{ db_password }}
      - DB_PORT=5432
      - SECRET_KEY={{ vault_secret_key }}
      - ALLOWED_HOSTS=*
    restart: unless-stopped
    command: >
      sh -c "python manage.py migrate &&
             python manage.py runserver 0.0.0.0:8000"
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:8000/ || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s

  frontend:
    build:
      context: ./studyshare/frontend
      dockerfile: Dockerfile
    ports:
      - "80:80"
    environment:
      - REACT_APP_API_URL=http://studyshare-alb-1137467487.us-east-1.elb.amazonaws.com:8000/api
    depends_on:
      - backend
    restart: unless-stopped