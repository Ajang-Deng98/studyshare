version: '3.8'

services:
  nginx:
    image: nginx:alpine
    ports:
      - "8000:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - backend
      - frontend
    restart: unless-stopped

  backend:
    image: {{ ecr_repository_url }}-backend:{{ app_version }}
    expose:
      - "8000"
    environment:
      - DEBUG=False
      - DB_HOST={{ db_host }}
      - DB_NAME={{ db_name }}
      - DB_USER={{ db_user }}
      - DB_PASSWORD={{ db_password }}
      - DB_PORT=5432
      - SECRET_KEY={{ vault_secret_key }}
    restart: unless-stopped

  frontend:
    image: {{ ecr_repository_url }}-frontend:{{ app_version }}
    expose:
      - "3000"
    depends_on:
      - backend
    restart: unless-stopped