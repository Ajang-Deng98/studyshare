services:
  app:
    image: {{ ecr_repository_url }}:{{ app_version }}
    ports:
      - "8000:8000"
    environment:
      - DEBUG=False
      - DB_HOST={{ db_host }}
      - DB_NAME={{ db_name }}
      - DB_USER={{ db_user }}
      - DB_PASSWORD={{ db_password }}
      - DB_PORT=5432
      - SECRET_KEY={{ vault_secret_key }}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s